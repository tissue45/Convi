{
  "name": "convenience-store-v2",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "excelDownload": {
    "enabled": true,
    "configFile": "./excel-config.json",
    "autoSetup": true,
    "features": [
      "storeSupply",
      "hqSupply",
      "orderManagement",
      "inventoryReport"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "node server.js",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "setup:excel": "node scripts/setup-excel.js",
    "postinstall": "npm run setup:excel || true",
    "serve:prod": "node server.js",
    "serve:local": "PORT=3001 node server.js",
    "test:prod": "npm run build && npm run serve:local",
    "start": "node server.js",
    "production": "npm run build && npm run start"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
